<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvNamacontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="Nama"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgPembeli"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/tvNamacontent"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_user" />

        <TextView
            android:id="@+id/tvIdLogincontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgPembeli"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPembeli"
            android:hint="Id Login"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvIdLogincontent"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPembeli"
            android:hint="Username :"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvusernameContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvusername"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPembeli"
            android:hint="Contoh Username"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvusernameContent"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPembeli"
            android:hint="Password :"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvpasswordContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvpassword"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPembeli"
            android:hint="Contoh password"
            android:textSize="20sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>
